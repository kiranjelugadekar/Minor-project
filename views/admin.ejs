<% 'boilerplate' %>
<%- include('includes/navbar') %>
<div class="container mt-4">
 <div class="row g-4 ">
    <% products.forEach( product => { %>
        <div class="col-md-4">
            <div class="card h-100">
                <span class = 'text-alert fs-5'>
                    <%= product.auctionStatus %>
                </span>
                <img src="<%= product.imageUrl %>" class="card-img-top" alt="<%= product.name %>" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title"><%= product.name %></h5>
                    <p class="card-text"><%= product.description %></p>

                    <div class="bid-info mb-3">
                        <div class="current-bid">
                           <% if(product.auctionStatus === 'active'){ %>
                                        <strong>Current Bid:</strong>
                                        <span class="text-success fs-5">
                                            ₹<%= product.currentBid  %>
                                        </span>
                                    <% } else { %>
                                        <strong>Starting Bid:</strong>
                                        <span class="text-success fs-5">
                                            ₹<%= product.startingBid  %>
                                        </span>
                                    <% } %>
                        </div>
                        <% if (product.lastBidder) { %>
                            <small class="text-muted">
                                Last bid by <%= product.lastBidder.username %>
                            </small>
                        <% } %>
                    </div>
                </div>
                <div class=" justify-content-left align-items-center" style="margin: 1rem;">
                        <form action="/listings/delete/<%= product._id %>?_method=DELETE" method="post" style="display: inline;">
                            <button class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">Delete Product</button>
                        </form>
                        <a href="/listings/show/<%= product._id %>" class="btn btn-primary flex-grow-1">View details</a>
                </div>
            </div>
        </div>
    <% }) %>
</div>
</div>
                  
<style>
.app-section {
    padding: 2rem 0;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.section-actions {
    display: flex;
    gap: 1rem;
}

.filter-select {
    min-width: 150px;
}

.search-input {
    min-width: 200px;
}

.card {
    transition: transform 0.2s, box-shadow 0.2s;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

/* Disable card hover when modal is open */
body.modal-open .card:hover {
    transform: none;
    box-shadow: none;
}

.current-bid {
    font-size: 1.1rem;
}

.btn-primary {
    background-color: #21808d;
    border-color: #21808d;
}

.btn-primary:hover {
    background-color: #1a6672;
    border-color: #1a6672;
}

.btn-outline-primary {
    color: #21808d;
    border-color: #21808d;
}

.btn-outline-primary:hover {
    background-color: #21808d;
    border-color: #21808d;
}

.modal-content {
    transform: translateZ(0);
    backface-visibility: hidden;
    will-change: transform;
}

@media (max-width: 768px) {
    .section-header {
        flex-direction: column;
        align-items: stretch;
    }
    
    .section-actions {
        flex-direction: column;
    }
    
    .filter-select,
    .search-input {
        width: 100%;
    }
}
</style>