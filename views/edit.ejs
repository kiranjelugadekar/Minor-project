<% layout('boilerplate') %>

    <div id="productFormModal" class="d-flex justify-content-center align-items-center modal hidden">
        <div class="modal-content">
            <div class="modal-header">
                <h3 id="productFormTitle">Edit Product</h3>
                <a href="/listings/show/<%= product._id %>" class="modal-close">&times;</a>
            </div>
            <div class="modal-body">
                <form id="productForm" class="product-form" method="post" action="/listings/edit/<%= product._id %>">
                    <div class="form-group">
                        <label class="form-label">Product Name</label>
                        <input name="product[name]" type="text" id="productName" class="form-control" value="<%= product.name %>" required>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Description</label>
                        <textarea name="product[description]" id="productDescription" class="form-control" rows="3" required><%= product.description %></textarea>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Starting Price</label>
                            <input name="product[startingBid]" type="number" id="productStartingBid" class="form-control" value="<%= product.startingBid %>" required>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Category</label>
                            <select name="product[category]" id="productCategory" class="form-control" required>
                                <option value="">Select category</option>
                                <% 
                                   const categories = [
                                        'Industrial Equipment', 
                                        'Storage Containers', 
                                        'Furniture', 
                                        'Construction Materials', 
                                        'Electronics', 
                                        'Vehicles', 
                                        'Machinery', 
                                        'Office Supplies'
                                   ];
                                    categories.forEach(category => { 
                                %>
                                    <option value="<%= category %>" <%= product.category === category ? 'selected' : '' %>><%= category %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="form-row">
                        <div class="form-group">
                            <label class="form-label">Condition</label>
                            <select name = "product[condition]" id="productCondition" class="form-control" required>
                                <option value="">Select condition</option>
                                <% 
                                    const conditions = ['Excellent', 'Good', 'Fair', 'Poor'];
                                    conditions.forEach(condition => { 
                                %>
                                   <option value="<%= condition %>" <%= product.condition === condition ? 'selected' : '' %>><%= condition %></option>
                                <% }) %>
                            </select>
                        </div>
                        
                        <div class="form-group">
                            <label class="form-label">Quantity</label>
                            <input name = "product[quantity]" type="number" id="productQuantity" class="form-control" value="<%= product.quantity %>" min="1" required>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <label class="form-label">Product Image</label>
                        <input name = "product[imageurl]" type="file" accept="image/*" />
                        <input type="text" name="product[imageUrl]" placeholder="Or enter an image URL" value="<%= product.imageUrl %>" />
                        <div id="imagePreview" class="image-preview"></div>
                    </div>
                    
                    <div class="modal-actions">
                        <a href="/listings/show/<%= product._id %>" class="btn btn--secondary cancel-product">Cancel</a>
                        <button type="submit" class="btn btn--primary">Update Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
