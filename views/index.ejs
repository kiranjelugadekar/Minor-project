<% layout('boilerplate') %>
<%- include('./includes/navbar') %>

    <section id="dashboardSection" class="app-section active z-1">
        <h3 style="color: #1a6672; margin-left: 5rem;">Available Products</h3>
        <div class="container mt-4">
                
            
            <div class="row g-5">
                <% products.forEach(product => { %>
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <span class="text-alert fs-5">
                                <%= product.auctionStatus %>
                            </span>
                            <img src="<%= product.imageUrl %>" 
                                 class="card-img-top" 
                                 alt="<%= product.name %>"
                                 style="height: 150px; object-fit: cover;">
                            <div class="card-body">
                                <h5 class="card-title"><%= product.name %></h5>
                                <p class="card-text"><%= product.description %></p>
                                
                                <div class="bid-info mb-3">
                                    <div class="current-bid">

                                       <% if(product.auctionStatus === 'active'){ %>
                                        <strong>Current Bid:</strong>
                                        <span class="text-success fs-5">
                                            ₹<%= product.currentBid  %>
                                        </span>
                                    <% } else { %>
                                        <strong>Starting Bid:</strong>
                                        <span class="text-success fs-5">
                                            ₹<%= product.startingBid  %>
                                        </span>
                                        <% } %>

                                    </div>
                                    <% if (product.lastBidder) { %>
                                        <small class="text-muted">
                                            Last bid by <%= product.lastBidder.username %>
                                        </small>
                                    <% } %>
                                </div>
                            </div>

                            <div class="card-footer bg-transparent">
                                <div class="d-flex gap-2">
                                    <a href="/listings/show/<%= product._id %>" 
                                       class="btn btn-outline-primary flex-grow-1">
                                        View Details
                                    </a>
                                    
                                    <% if (currUser && !currUser._id.equals(product.createdBy)) { %>
                                        <button type="button" 
                                                class="btn btn-primary flex-grow-1"
                                                data-bs-toggle="modal" 
                                                data-bs-target="#bidModal<%= product._id %>">
                                            Place Bid
                                        </button>

                                        <!-- Bid Modal -->
                                        <div class="modal fade" 
                                             id="bidModal<%= product._id %>" 
                                             tabindex="-1" 
                                             aria-labelledby="bidModalLabel<%= product._id %>" 
                                             aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title" 
                                                            id="bidModalLabel<%= product._id %>">
                                                            Place Bid for <%= product.name %>
                                                        </h5>
                                                        <button type="button" 
                                                                class="btn-close" 
                                                                data-bs-dismiss="modal" 
                                                                aria-label="Close"></button>
                                                    </div>
                                                    <form action="/products/<%= product._id %>/bid" 
                                                          method="POST" 
                                                          onsubmit="return validateBid(this)">
                                                        <div class="modal-body">
                                                            <div class="mb-3">
                                                                <label class="form-label">
                                                                    Current Highest Bid: 
                                                                    ₹<%= product.currentBid || product.startingBid %>
                                                                </label>
                                                                <input type="number" 
                                                                       name="amount" 
                                                                       class="form-control" 
                                                                       min="<%= (product.currentBid || product.startingBid) + 50 %>"
                                                                       required>
                                                                <div class="form-text">
                                                                    Minimum bid: ₹<%= (product.currentBid || product.startingBid) + 50 %>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" 
                                                                    class="btn btn-secondary" 
                                                                    data-bs-dismiss="modal">Close</button>
                                                            <button type="submit" 
                                                                    class="btn btn-primary">Place Bid</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>
            
        </div>
    </section>



<script>
    
function validateBid(form) {
    const amount = parseInt(form.amount.value);
    const minBid = parseInt(form.amount.min);
    
    if (amount < minBid) {
        alert(`Bid must be at least ₹${minBid}`);
        return false;
    }
    return true;
}

// Filter and search functionality
document.addEventListener('DOMContentLoaded', function() {
    const statusFilter = document.getElementById('statusFilter');
    const searchInput = document.getElementById('searchProducts');
    const products = document.querySelectorAll('.col-md-4');

    function filterProducts() {
        const status = statusFilter.value.toLowerCase();
        const search = searchInput.value.toLowerCase();

        products.forEach(product => {
            const productName = product.querySelector('.card-title').textContent.toLowerCase();
            const productStatus = product.dataset.status || 'active';
            
            const matchesStatus = !status || productStatus === status;
            const matchesSearch = !search || productName.includes(search);

            product.style.display = matchesStatus && matchesSearch ? '' : 'none';
        });
    }

    statusFilter.addEventListener('change', filterProducts);
    searchInput.addEventListener('input', filterProducts);
});

// Show flash message in modal if there's a bid error
 if (error && error.includes('bid')) { 
    document.addEventListener('DOMContentLoaded', function() {
        const modal = new bootstrap.Modal(document.getElementById('bidModal<%= error_product_id %>'));
        modal.show();
    });
 } 
</script>

<style>
    
.app-section {
    padding: 2rem 0;
}

.section-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
}

.section-actions {
    display: flex;
    gap: 1rem;
}

.filter-select {
    min-width: 150px;
}

.search-input {
    min-width: 200px;
}

.card {
    transition: transform 0.2s, box-shadow 0.2s;
}

.card:hover {
    transform: translateY(-5px);
    box-shadow: 0 4px 15px rgba(0,0,0,0.1);
}

/* Disable card hover when modal is open */
body.modal-open .card:hover {
    transform: none;
    box-shadow: none;
}

.current-bid {
    font-size: 1.1rem;
}

.btn-primary {
    background-color: #21808d;
    border-color: #21808d;
}

.btn-primary:hover {
    background-color: #1a6672;
    border-color: #1a6672;
}

.btn-outline-primary {
    color: #21808d;
    border-color: #21808d;
}

.btn-outline-primary:hover {
    background-color: #21808d;
    border-color: #21808d;
}

.modal-content {
    transform: translateZ(0);
    backface-visibility: hidden;
    will-change: transform;
}

@media (max-width: 768px) {
    .section-header {
        flex-direction: column;
        align-items: stretch;
    }
    
    .section-actions {
        flex-direction: column;
    }
    
    .filter-select,
    .search-input {
        width: 100%;
    }
}
</style>